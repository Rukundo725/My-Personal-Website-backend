{
  "name": "my-personal-website-backend",
  "version": "1.0.0",
  "description": "this is my backend for my personal website with nodejs and mangodb",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec babel-node src/index.js",
    "build": "babel -d ./build src/index.js -s",
    "start": "node src/index", 
    "test": "echo 'NodeJS:' && npx node -v && nyc --reporter=html --reporter=text --reporter=text-summary --reporter=json-summary mocha  --timeout 150000 --require @babel/polyfill --require @babel/register 'tests/appTest.js'",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coverage:badge": "coverage-badge-creator --config './badge-coverage-config.json'",
    "make-badges": "istanbul-badges-readme",
    "heroku config": "set USE_NPM_INSTALL=true",
    "heroku": "node src/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rukundo725/My-Personal-Website-backend.git"
  },
  "author": "Germain Rukundo (Owner)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Rukundo725/My-Personal-Website-backend/issues"
  },
  "homepage": "https://github.com/Rukundo725/My-Personal-Website-backend#readme",
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.16.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "babel-loader": "^8.2.4",
    "@babel/node": "^7.16.8",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "coverage-badge-creator": "^1.0.10",
    "coveralls": "^3.1.1",
    "istanbul-badges-readme": "^1.8.1",
    "mocha": "^9.2.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "supertest": "^6.2.2",
    "swagger-autogen": "^2.20.5"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.4",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0"
  }
}
